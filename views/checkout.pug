        script. 
            document.addEventListener("DOMContentLoaded", function () {
                const token = localStorage.getItem("authToken");
                if (token) {
                    const nav = document.getElementById("auth-link");
                    nav.textContent = "My Profile";
                    nav.href = "/profile";
                }        
            });
        script.
            function loadCart(token) {
                fetch('/checkout/api', {
                    method: 'GET',
                    headers: {
                        'Authorization': 'Bearer ' + token
                    }
                })
                .then(res => res.json())
                .then(data => {
                    const cartItems = document.getElementById("cart-items");
                    const cartList = document.getElementById("cart-list");
                    const cartTotal = document.getElementById("cart-total");

                    cartItems.innerHTML = "";
                    cartList.innerHTML = "";
                    cartTotal.textContent = "";

                    let subTotal = 0;

                    console.log(data)

                    if (data.products == '') {
                        const item = document.createElement("div");
                        item.classList.add("cart-item");
                        item.innerHTML = `
                        <p>No products in your carts</p>
                        `;
                        cartItems.appendChild(item);

                        const listItem = document.createElement("div");
                        listItem.classList.add("cart-list");
                        cartList.appendChild(listItem);
                    } else  {
                        data.products.forEach((product, index) => {
                            console.log(data.products)
                            subTotal += product.price;

                            const item = document.createElement("div");
                            item.classList.add("cart-item");
                            item.innerHTML = `
                            <div class="container-img">
                                <img src="${product.imageUrl || '/images/default.png'}" width="120" height="180" class="img-products" alt="Image of ${product.name}">
                                <button onclick="popProduct('${product.id}', '${index}')"><img src="/images/trash.png" class="trash-icon" alt="Trash icon"></button>
                            </div>
                            <div class="product-name">${product.name}</div>
                            <div class="product-price">$${product.price.toFixed(2)}</div>
                            <div class="product-desc">${product.description || ''}</div>
                            `;
                            cartItems.appendChild(item);

                            const listItem = document.createElement("div");
                            listItem.classList.add("cart-list");
                            listItem.textContent = product.name;
                            cartList.appendChild(listItem);
                        });
                    }
                    cartTotal.textContent = `$${subTotal.toFixed(2)}`;
                })
                .catch(err => console.error("Erreur lors de la rÃ©cupÃ©ration du panier :", err));
            }
            document.addEventListener("DOMContentLoaded", function () {
                const token = localStorage.getItem("authToken") || sessionStorage.getItem("authToken");
                if (token) {
                    const nav = document.getElementById("auth-link");
                    nav.textContent = "My Profile";
                    nav.href = "/profile";

                    loadCart(token)
                }
            });
        script.
            function popProduct(product_id, index) {
                const token = localStorage.getItem("authToken") || sessionStorage.getItem("authToken");    
                console.log("index: ", index)
                console.log("product_id: ", product_id)

                if (token) {

                    fetch('/checkout/api', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': 'Bearer ' + token
                        },
                        body: JSON.stringify({ product_id: product_id, index: index })
                    })
                    .then(res => res.json())
                    .then(data => {
                        loadCart(token)
                        alert(data.message);
                    })
                    .catch(err => console.error("Erreur lors de la rÃ©cupÃ©ration du panier :", err));
                }
            }
        script. 
            document.addEventListener("DOMContentLoaded", () => {
                const button = document.getElementById('checkout');
                
                button.addEventListener('click', () => {
                    const token = localStorage.getItem("authToken") || sessionStorage.getItem("authToken");    

                    fetch('/checkout/purchase', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': 'Bearer ' + token
                        }
                    })
                    .then(res => res.json())
                    .then(data => {
                        alert(data.message || data.error);
                        loadCart(token);  // Reload cart to reflect it's now empty
                    })
                    .catch(err => console.error("Error during purchase :", err));
                });
            });

        script.
            function openMenu() {
                const menu = document.getElementById('menu');
                menu.classList.toggle('hidden');
            }