    .welcome 
      h1 Welcome back, User
    main
      h2 Latest Products:
      .product-grid
        each val, key in products
          .product-box 
            a(href=`/product/${val.id}`)
              .product 
                img(src=val.imageUrl alt="Image of Product") 
                .product-name= val.name 
                .product-price= '$' + val.price
                .product-desc= val.description
